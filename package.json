{
  "name": "meteora-damm-v2-fee-routing",
  "version": "0.2.0",
  "description": "Permissionless fee routing Anchor program for Meteora DAMM v2 pools",
  "license": "MIT",
  "scripts": {
    "test": "npm run test:local",
    "test:local": "ANCHOR_PROVIDER_URL=http://127.0.0.1:8899 ANCHOR_WALLET=~/.config/solana/test-wallet.json yarn run ts-mocha -p ./tsconfig.json -t 1000000 'tests/fee-routing.ts' 'tests/program-logic-tests.ts'",
    "test:devnet": "ANCHOR_PROVIDER_URL=https://devnet.helius-rpc.com/?api-key=142fb48a-aa24-4083-99c8-249df5400b30 ANCHOR_WALLET=~/.config/solana/test-wallet.json yarn run ts-mocha -p ./tsconfig.json -t 1000000 'tests/devnet-deployment-test.ts' 'tests/program-logic-tests.ts'",
    "test:unit": "cd programs/fee-routing && cargo test --lib",
    "test:all": "npm run test:local && npm run test:devnet && npm run test:unit",
    "setup:local": "ts-node scripts/run-local-setup.ts",
    "build": "anchor build",
    "deploy:devnet": "ANCHOR_WALLET=$HOME/.config/solana/REC-devnet.json anchor deploy --provider.cluster https://devnet.helius-rpc.com/?api-key=142fb48a-aa24-4083-99c8-249df5400b30",
    "upgrade:devnet": "ANCHOR_WALLET=$HOME/.config/solana/REC-devnet.json anchor upgrade --program-id RECTGNmLAQ3jBmp4NV2c3RFuKjfJn2SQTnqrWka4wce --provider.cluster https://devnet.helius-rpc.com/?api-key=142fb48a-aa24-4083-99c8-249df5400b30 target/deploy/fee_routing.so"
  },
  "dependencies": {
    "@coral-xyz/anchor": "0.31.1",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.95.0"
  },
  "devDependencies": {
    "@meteora-ag/cp-amm-sdk": "^1.1.5",
    "@streamflow/stream": "^9.0.2",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "chai": "^4.3.0",
    "mocha": "^10.0.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.0.0"
  }
}
